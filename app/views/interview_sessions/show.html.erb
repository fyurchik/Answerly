<div class="max-w-5xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to interview_sessions_path, class: "inline-flex items-center text-body-color hover:text-primary transition-colors mb-4" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Sessions
    <% end %>
    
    <div class="flex justify-between items-start">
      <div class="flex-1">
        <h1 class="text-4xl font-bold text-primary mb-3"><%= @interview_session.title %></h1>
        <div class="flex items-center space-x-3">
          <span class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-secondary-bg-light text-secondary">
            <%= @interview_session.interview_category %>
          </span>
          <span class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-accent-lightest text-primary">
            <%= @interview_session.position_level %>
          </span>
        </div>
      </div>
      
      <div class="flex space-x-3">
        <%= link_to edit_interview_session_path(@interview_session), 
            class: "inline-flex items-center bg-secondary hover:bg-secondary-dark text-white font-semibold px-6 py-3 rounded-lg transition-colors shadow-sm" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit
        <% end %>
        <%= button_to interview_session_path(@interview_session), method: :delete,
            data: { turbo_confirm: "Are you sure you want to delete this interview session?" },
            class: "inline-flex items-center bg-error hover:bg-error-dark text-white font-semibold px-6 py-3 rounded-lg transition-colors shadow-sm" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Left Column - Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Session Details Card -->
      <div class="bg-white rounded-xl shadow-lg border border-stroke p-6">
        <h2 class="text-2xl font-semibold text-primary mb-6">Session Details</h2>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-semibold text-body-color mb-2">Job Title</label>
            <p class="text-lg text-primary"><%= @interview_session.title %></p>
          </div>

          <% if @interview_session.job_url.present? %>
            <div>
              <label class="block text-sm font-semibold text-body-color mb-2">Job Posting</label>
              <a href="<%= @interview_session.job_url %>" target="_blank" 
                 class="inline-flex items-center text-link hover:text-link-hover transition-colors">
                <%= @interview_session.job_url %>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </div>
          <% end %>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-semibold text-body-color mb-2">Interview Category</label>
              <p class="text-lg text-primary"><%= @interview_session.interview_category %></p>
            </div>

            <div>
              <label class="block text-sm font-semibold text-body-color mb-2">Position Level</label>
              <p class="text-lg text-primary"><%= @interview_session.position_level %></p>
            </div>
          </div>

          <% if @interview_session.resume.attached? %>
            <div>
              <label class="block text-sm font-semibold text-body-color mb-2">Resume</label>
              <%= link_to rails_blob_path(@interview_session.resume, disposition: "attachment"), 
                  class: "inline-flex items-center px-4 py-2 bg-error-bg-light text-error hover:bg-error hover:text-white rounded-lg transition-colors" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
                <%= @interview_session.resume.filename %> 
                (<%= number_to_human_size(@interview_session.resume.byte_size) %>)
              <% end %>
            </div>
          <% end %>

          <div>
            <label class="block text-sm font-semibold text-body-color mb-2">Created</label>
            <p class="text-body-color"><%= @interview_session.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>
      </div>

      <!-- Start Interview Button -->
      <div class="bg-gradient-to-br from-primary via-primary-light to-secondary rounded-xl shadow-lg p-8 text-center text-white">
        <h3 class="text-2xl font-bold mb-3">Ready to Start?</h3>
        <p class="text-accent-lightest mb-6">Begin your personalized interview session</p>
        <button class="bg-white hover:bg-accent text-primary font-semibold px-8 py-4 rounded-lg transition-colors shadow-lg">
          Start Interview Session
        </button>
      </div>
    </div>

    <!-- Right Column - Quick Actions -->
    <div class="space-y-6">
      <!-- Quick Stats -->
      <div class="bg-white rounded-xl shadow-lg border border-stroke p-6">
        <h3 class="text-lg font-semibold text-primary mb-4">Quick Stats</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-body-color">Sessions Completed</span>
            <span class="text-2xl font-bold text-primary">0</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-body-color">Average Score</span>
            <span class="text-2xl font-bold text-secondary">-</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-body-color">Time Practiced</span>
            <span class="text-2xl font-bold text-accent-dark">0h</span>
          </div>
        </div>
      </div>

      <!-- Tips Card -->
      <div class="bg-info-bg-light rounded-xl border-l-4 border-info p-6">
        <h3 class="text-lg font-semibold text-info-dark mb-3">ðŸ’¡ Interview Tips</h3>
        <ul class="space-y-2 text-sm text-body-color">
          <li class="flex items-start">
            <span class="text-info mr-2">â€¢</span>
            Review the job description thoroughly
          </li>
          <li class="flex items-start">
            <span class="text-info mr-2">â€¢</span>
            Practice STAR method for behavioral questions
          </li>
          <li class="flex items-start">
            <span class="text-info mr-2">â€¢</span>
            Prepare questions for the interviewer
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

