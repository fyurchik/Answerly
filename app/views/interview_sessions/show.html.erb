<div class="max-w-5xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to interview_sessions_path, class: "inline-flex items-center text-body-color hover:text-primary transition-colors mb-4" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Sessions
    <% end %>
    
    <div class="flex justify-between items-start">
      <div class="flex-1">
        <h1 class="text-4xl font-bold text-primary mb-3"><%= @interview_session.title %></h1>
        <div class="flex items-center space-x-3">
          <span class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-secondary-bg-light text-secondary">
            <%= @interview_session.interview_category %>
          </span>
          <span class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-accent-lightest text-primary">
            <%= @interview_session.position_level %>
          </span>
        </div>
      </div>
      
      <div class="flex space-x-3">
        <%= button_to interview_session_path(@interview_session), method: :delete,
            data: { turbo_confirm: "Are you sure you want to delete this interview session?" },
            class: "inline-flex items-center bg-error hover:bg-error-dark text-white font-semibold px-6 py-3 rounded-lg transition-colors shadow-sm" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Left Column - Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Session Details Card -->
      <div class="bg-white rounded-xl shadow-lg border border-stroke p-6">
        <h2 class="text-2xl font-semibold text-primary mb-6">Session Details</h2>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-semibold text-body-color mb-2">Job Title</label>
            <p class="text-lg text-primary"><%= @interview_session.title %></p>
          </div>

          <% if @interview_session.job_url.present? %>
            <div>
              <label class="block text-sm font-semibold text-body-color mb-2">Job Posting</label>
              <a href="<%= @interview_session.job_url %>" target="_blank" 
                 class="inline-flex items-center text-link hover:text-link-hover transition-colors">
                <%= @interview_session.job_url %>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </div>
          <% end %>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-semibold text-body-color mb-2">Interview Category</label>
              <p class="text-lg text-primary"><%= @interview_session.interview_category %></p>
            </div>

            <div>
              <label class="block text-sm font-semibold text-body-color mb-2">Position Level</label>
              <p class="text-lg text-primary"><%= @interview_session.position_level %></p>
            </div>
          </div>

          <% if @interview_session.resume.attached? %>
            <div>
              <label class="block text-sm font-semibold text-body-color mb-2">Resume</label>
              <%= link_to rails_blob_path(@interview_session.resume, disposition: "attachment"),
                  class: "inline-flex items-center px-4 py-2 bg-secondary-bg-light text-secondary hover:bg-secondary hover:text-white rounded-lg transition-colors" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
                <%= @interview_session.resume.filename %>
                (<%= number_to_human_size(@interview_session.resume.byte_size) %>)
              <% end %>
            </div>
          <% end %>

          <div>
            <label class="block text-sm font-semibold text-body-color mb-2">Created</label>
            <p class="text-body-color"><%= @interview_session.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>
      </div>

      <!-- Start Interview Button / View Feedback -->
      <% if @interview_session.ready? %>
        <% is_completed = @interview_session.answered? %>
        <% is_resuming = @interview_session.questions.joins(:answer).exists? && !is_completed %>

        <% if is_completed %>
          <!-- Interview Completed - View Feedback -->
          <div class="bg-gradient-to-br from-success via-success-dark to-success-light rounded-xl shadow-lg p-8 text-center text-white">
            <div class="mb-4">
              <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3">Interview Completed!</h3>
            <p class="text-success-bg-light-2 mb-6">
              Great job! View your AI-generated feedback and performance analysis
            </p>
            <%= link_to interview_session_feedback_path(@interview_session), class: "inline-block bg-white hover:bg-success-bg-light text-success-dark font-semibold px-8 py-4 rounded-lg transition-colors shadow-lg" do %>
              <span class="flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8m4-12h2a2 2 0 012 2v10a2 2 0 01-2 2h-2m-4-12V3m0 0L9 7m4-4l4 4"></path>
                </svg>
                View Feedback
              </span>
            <% end %>
          </div>
        <% else %>
          <!-- Start or Resume Interview -->
          <div class="bg-gradient-to-br from-primary via-primary-light to-secondary rounded-xl shadow-lg p-8 text-center text-white">
            <h3 class="text-2xl font-bold mb-3"><%= is_resuming ? 'Ready to Resume?' : 'Ready to Start?' %></h3>
            <p class="text-primary-bg-light-2 mb-6">
              <%= is_resuming ? 'Continue your interview where you left off' : 'Begin your personalized interview session' %>
            </p>
            <%= link_to interview_session_interview_path(@interview_session), class: "inline-block bg-white hover:bg-primary-bg-light text-primary font-semibold px-8 py-4 rounded-lg transition-colors shadow-lg" do %>
              <%= is_resuming ? 'Resume Interview' : 'Start Interview Session' %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="bg-info-bg-light border-l-4 border-info rounded-xl shadow-lg p-8 text-center">
          <div class="flex justify-center mb-4">
            <svg class="animate-spin h-12 w-12 text-info" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-primary mb-3">Preparing Your Interview</h3>
          <p class="text-body-color mb-4">
            We're generating your personalized interview questions and videos. This usually takes 1-2 minutes.
          </p>
          <div class="bg-white rounded-lg p-6 mb-6 border border-stroke">
            <div class="flex items-center justify-between mb-4">
              <span class="text-body-color font-medium">Questions Generated:</span>
              <span class="font-bold text-primary text-lg"><%= @interview_session.questions.count %></span>
            </div>
            <div class="flex items-center justify-between mb-4">
              <span class="text-body-color font-medium">Videos Ready:</span>
              <span class="font-bold text-success text-lg"><%= @interview_session.questions.where.not(video_url: nil).count %> / <%= @interview_session.questions.count %></span>
            </div>
            <!-- Progress Bar -->
            <div class="w-full bg-gray-2 rounded-full h-3 overflow-hidden">
              <% progress = @interview_session.questions.count > 0 ? (@interview_session.questions.where.not(video_url: nil).count.to_f / @interview_session.questions.count * 100).round : 0 %>
              <div class="bg-gradient-to-r from-secondary to-info h-3 rounded-full transition-all duration-500" style="width: <%= progress %>%"></div>
            </div>
            <p class="text-sm text-body-color-2 mt-2 text-center"><%= progress %>% Complete</p>
          </div>
          <button onclick="location.reload()" class="bg-secondary hover:bg-secondary-dark text-white font-semibold px-8 py-3 rounded-lg transition-all duration-200 shadow-md hover:shadow-lg">
            <span class="flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Refresh Status
            </span>
          </button>
        </div>
      <% end %>
    </div>

    <!-- Right Column - Quick Actions -->
    <div class="space-y-6">
      <!-- Quick Stats -->
      <%
        answered_count = @interview_session.questions.joins(:answer).count
        total_questions = @interview_session.questions.count
        completion_percentage = total_questions > 0 ? (answered_count.to_f / total_questions * 100).round : 0
        is_completed = @interview_session.answered?
      %>
      <div class="bg-white rounded-xl shadow-lg border border-stroke p-6">
        <h3 class="text-lg font-semibold text-primary mb-4">Interview Progress</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-body-color">Questions Answered</span>
            <span class="text-2xl font-bold text-primary"><%= answered_count %> / <%= total_questions %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-body-color">Completion</span>
            <span class="text-2xl font-bold <%= is_completed ? 'text-success' : 'text-secondary' %>">
              <%= completion_percentage %>%
            </span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-body-color">Status</span>
            <% if is_completed %>
              <span class="px-3 py-1 bg-success-bg text-success-dark font-semibold rounded-full text-sm flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Completed
              </span>
            <% elsif answered_count > 0 %>
              <span class="px-3 py-1 bg-warning-bg text-warning-dark-2 font-semibold rounded-full text-sm flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                In Progress
              </span>
            <% else %>
              <span class="px-3 py-1 bg-info-bg text-info-dark font-semibold rounded-full text-sm flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Not Started
              </span>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Tips Card -->
      <div class="bg-info-bg-light rounded-xl border-l-4 border-info p-6">
        <h3 class="text-lg font-semibold text-info-dark mb-3">Interview Tips</h3>
        <ul class="space-y-2 text-sm text-body-color">
          <li class="flex items-start">
            <span class="text-info mr-2">•</span>
            Review the job description thoroughly
          </li>
          <li class="flex items-start">
            <span class="text-info mr-2">•</span>
            Practice STAR method for behavioral questions
          </li>
          <li class="flex items-start">
            <span class="text-info mr-2">•</span>
            Prepare questions for the interviewer
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

