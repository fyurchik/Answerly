<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <%= link_to interview_sessions_path, class: "inline-flex items-center text-body-color hover:text-primary transition-colors mb-4" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Sessions
    <% end %>
    <h1 class="text-4xl font-bold text-primary mb-2">Interview Setup</h1>
    <p class="text-body-color">Complete these fields to begin your personalized interview</p>
  </div>

  <%= render 'form', interview_session: @interview_session %>
</div>

