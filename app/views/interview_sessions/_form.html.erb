<div class="max-w-3xl mx-auto">
  <div class="bg-white rounded-xl shadow-lg border border-stroke p-8">
    <%= form_with(model: interview_session, local: true, class: "space-y-6") do |form| %>
      <% if interview_session.errors.any? %>
        <div class="bg-error-bg-light border-l-4 border-error rounded-lg p-4 mb-6">
          <h3 class="text-error-dark font-semibold mb-3">
            <%= pluralize(interview_session.errors.count, "error") %> prohibited this interview session from being saved:
          </h3>
          <ul class="list-disc list-inside space-y-1">
            <% interview_session.errors.full_messages.each do |message| %>
              <li class="text-error text-sm"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Job Title -->
      <div>
        <%= form.label :title, "Job Title", class: "block text-sm font-semibold text-primary mb-2" %>
        <div class="relative">
          <%= form.text_field :title, 
              class: "w-full px-4 py-3 border border-stroke rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all",
              placeholder: "e.g. Senior Software Engineer" %>
          <div class="mt-2 flex items-start">
            <svg class="w-4 h-4 text-info mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            <p class="text-sm text-body-color-2">Share the exact role you want to practice with the interviewer</p>
          </div>
        </div>
      </div>

      <!-- Job URL -->
      <div>
        <%= form.label :job_url, "Job URL (Optional)", class: "block text-sm font-semibold text-primary mb-2" %>
        <div class="relative">
          <%= form.url_field :job_url, 
              class: "w-full px-4 py-3 border border-stroke rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all",
              placeholder: "https://..." %>
          <div class="mt-2 flex items-start">
            <svg class="w-4 h-4 text-info mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            <p class="text-sm text-body-color-2">Paste the job description link so AI can pull responsibilities and qualifications</p>
          </div>
        </div>
      </div>

      <!-- Interview Category -->
      <div>
        <%= form.label :interview_category, "Interview Category", class: "block text-sm font-semibold text-primary mb-2" %>
        <div class="relative">
          <%= form.select :interview_category, 
              InterviewSession::INTERVIEW_CATEGORIES,
              { include_blank: "Select a category" },
              class: "w-full px-4 py-3 border border-stroke rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all appearance-none bg-white" %>
          <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-body-color">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-start">
          <svg class="w-4 h-4 text-info mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          <p class="text-sm text-body-color-2">Choose the interview style. We balance questions and feedback based on this</p>
        </div>
      </div>

      <!-- Position Level -->
      <div>
        <%= form.label :position_level, "Position Level", class: "block text-sm font-semibold text-primary mb-2" %>
        <div class="relative">
          <%= form.select :position_level, 
              InterviewSession::POSITION_LEVELS,
              { include_blank: "Select a level" },
              class: "w-full px-4 py-3 border border-stroke rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all appearance-none bg-white" %>
          <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-body-color">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-start">
          <svg class="w-4 h-4 text-info mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          <p class="text-sm text-body-color-2">Let us know the seniority you're aiming for. We tailor difficulty and expectations</p>
        </div>
      </div>

      <!-- Resume Upload -->
      <div>
        <%= form.label :resume, "Resume (Optional - PDF only)", class: "block text-sm font-semibold text-primary mb-2" %>
        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-stroke border-dashed rounded-lg hover:border-primary transition-colors">
          <div class="space-y-1 text-center">
            <svg class="mx-auto h-12 w-12 text-body-color-2" stroke="currentColor" fill="none" viewBox="0 0 48 48">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <div class="flex text-sm text-body-color">
              <label class="relative cursor-pointer bg-white rounded-md font-medium text-primary hover:text-primary-dark focus-within:outline-none transition-colors">
                <span>Upload a file</span>
                <%= form.file_field :resume, class: "sr-only", accept: "application/pdf" %>
              </label>
              <p class="pl-1">or drag and drop</p>
            </div>
            <p class="text-xs text-body-color-2">PDF up to 5MB</p>
            <% if interview_session.resume.attached? %>
              <p class="text-sm text-success mt-2">
                âœ“ <%= interview_session.resume.filename %>
              </p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex items-center justify-between pt-6 border-t border-stroke">
        <%= link_to "Cancel", interview_sessions_path,
            class: "text-body-color hover:text-primary font-medium transition-colors" %>
        <%= form.submit interview_session.persisted? ? "Update Session" : "Create Session",
            class: "bg-primary hover:bg-primary-dark text-white font-semibold px-6 py-3 rounded-lg transition-colors shadow-sm cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

