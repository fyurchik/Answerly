<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="mx-auto w-16 h-16 bg-primary rounded-xl flex items-center justify-center mb-4">
        <span class="text-white font-bold text-3xl">A</span>
      </div>
      <h2 class="text-3xl font-bold text-primary mb-2">Welcome Back</h2>
      <p class="text-body-color">Sign in to your Answerly account</p>
    </div>

    <!-- Login Form Card -->
    <div class="bg-white rounded-xl shadow-lg border border-stroke p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <!-- Email Field -->
        <div class="mb-6">
          <%= f.label :email, class: "block text-sm font-semibold text-primary mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 border border-stroke rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all",
              placeholder: "Enter your email" %>
        </div>

        <!-- Password Field -->
        <div class="mb-6">
          <%= f.label :password, class: "block text-sm font-semibold text-primary mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-3 border border-stroke rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all",
              placeholder: "Enter your password" %>
        </div>

        <!-- Remember Me & Forgot Password -->
        <div class="flex items-center justify-between mb-6">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "w-4 h-4 text-primary border-stroke rounded focus:ring-2 focus:ring-primary" %>
              <%= f.label :remember_me, class: "ml-2 text-sm text-body-color" %>
            </div>
          <% end %>

          <% if devise_mapping.recoverable? %>
            <%= link_to "Forgot password?", new_password_path(resource_name),
                class: "text-sm text-link hover:text-link-hover font-medium" %>
          <% end %>
        </div>

        <!-- Submit Button -->
        <div class="mb-6">
          <%= f.submit "Sign In",
              class: "w-full bg-primary hover:bg-primary-dark text-white font-semibold py-3 px-4 rounded-lg transition-colors shadow-sm cursor-pointer" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-stroke"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-body-color-2">Don't have an account?</span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center">
        <%= link_to "Create an account", new_registration_path(resource_name),
            class: "text-secondary hover:text-secondary-dark font-semibold transition-colors" %>
      </div>
    </div>

    <!-- Additional Links -->
    <div class="mt-6 text-center text-sm text-body-color-2">
      <%= link_to "â† Back to home", root_path, class: "hover:text-primary transition-colors" %>
    </div>
  </div>
</div>
