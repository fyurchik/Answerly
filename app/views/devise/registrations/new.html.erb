<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="mx-auto w-16 h-16 bg-secondary rounded-xl flex items-center justify-center mb-4">
        <span class="text-white font-bold text-3xl">A</span>
      </div>
      <h2 class="text-3xl font-bold text-primary mb-2">Create Account</h2>
      <p class="text-body-color">Join Answerly today</p>
    </div>

    <!-- Registration Form Card -->
    <div class="bg-white rounded-xl shadow-lg border border-stroke p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div class="mb-6">
          <%= f.label :email, class: "block text-sm font-semibold text-primary mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 border border-stroke rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent transition-all",
              placeholder: "Enter your email" %>
        </div>

        <!-- Password Field -->
        <div class="mb-6">
          <%= f.label :password, class: "block text-sm font-semibold text-primary mb-2" do %>
            Password
            <% if @minimum_password_length %>
              <span class="text-xs font-normal text-body-color-2">
                (<%= @minimum_password_length %> characters minimum)
              </span>
            <% end %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-stroke rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent transition-all",
              placeholder: "Create a password" %>
        </div>

        <!-- Password Confirmation Field -->
        <div class="mb-6">
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-primary mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-stroke rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent transition-all",
              placeholder: "Confirm your password" %>
        </div>

        <!-- Submit Button -->
        <div class="mb-6">
          <%= f.submit "Create Account",
              class: "w-full bg-secondary hover:bg-secondary-dark text-white font-semibold py-3 px-4 rounded-lg transition-colors shadow-sm cursor-pointer" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-stroke"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-body-color-2">Already have an account?</span>
        </div>
      </div>

      <!-- Sign In Link -->
      <div class="text-center">
        <%= link_to "Sign in instead", new_session_path(resource_name),
            class: "text-primary hover:text-primary-dark font-semibold transition-colors" %>
      </div>
    </div>

    <!-- Additional Links -->
    <div class="mt-6 text-center text-sm text-body-color-2">
      <%= link_to "â† Back to home", root_path, class: "hover:text-primary transition-colors" %>
    </div>
  </div>
</div>
